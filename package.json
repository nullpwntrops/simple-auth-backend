{
  "name": "simple-auth-backend",
  "version": "0.0.1",
  "description": "Simple Auth backend using JWT",
  "author": "",
  "private": true,
  "license": "MIT-license",
  "scripts": {
    "build": "tsc -p .",
    "build:all": "rm -rf dist && npm ci && npm run build",
    "build:docker": "npm run docker:build",
    "build:nest": "rm -rf dist && nest build",
    "clean:all": "rm -rf dist && rm -rf node_modules && rm -rf coverage && rm -rf src/generated",
    "clean:dist": "rm -rf dist",
    "debug": "nodemon --watch ./dist --inspect=0.0.0.0:5858 --nolazy ./dist/main.js",
    "docker:build": "docker compose build --no-cache",
    "docker:create": "docker compose create",
    "docker:down": "docker compose down --volumes",
    "docker:up": "NODE_ENV=docker docker compose up --build",
    "docker:prune": "docker image prune",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=development nest start",
    "start:docker": "npm run build:nest && npm run docker:down && npm run docker:up",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typeorm": "npm run build:nest && npx typeorm-ts-node-commonjs",
    "typeorm:cache": "npx typeorm-ts-node-commonjs cache:clear",
    "schema:sync": "npx typeorm-ts-node-commonjs schema:sync",
    "schema:drop": "npx typeorm-ts-node-commonjs -d ./src/database/data-source.ts",
    "migration:create": "npm run typeorm -- migration:create ./src/database/migrations/schema-update",
    "migration:generate": "NODE_ENV=development npm run typeorm -- migration:generate ./src/database/migrations -d ./src/database/data-source.ts",
    "migration:show": "NODE_ENV=development npm run typeorm -- migration:show -d ./src/database/data-source.ts",
    "migration:run": "NODE_ENV=development npm run typeorm -- migration:run -d ./src/database/data-source.ts",
    "migration:revert": "NODE_ENV=development npm run typeorm -- migration:revert -d ./src/database/data-source.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "watch": "tsc -w -p ."
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.1.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "joi": "^17.13.3",
    "luxon": "^3.6.1",
    "nestjs-pino": "^4.4.0",
    "nodemailer": "^6.10.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "pg": "^8.13.3",
    "pino-http": "^10.4.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^6.4.17",
    "@types/nodemailer-smtp-transport": "^2.7.8",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
