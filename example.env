######################
# Application Settings
SERVICE_NAME=auth-service
SERVICE_IDENTIFIER=<UUID generated by Kube>
SERVICE_URL=<application URL>
PORT=3000
DOCKER_PORT=2000
NODE_ENV=development
APP_NAME="<Your application's name - with quotes>"
API_KEY=<application API key>

###################
# Database Settings

# DB environment settings
DB_HOST=localhost
DB_DATABASE=auth_db
DB_PORT=5432
DB_USERNAME=<db username>
DB_PASSWORD=<db password>

# Misc DB settings
DB_LOGGING=true
DB_SSLMODE=true
DB_SYNC=true

##############
# JWT Settings
JWT_ACCESS_SECRET=<JWT access secret>
JWT_ACCESS_EXPIRATION=1d
JWT_REFRESH_SECRET=<JWT refresh secret>
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_EXPIRATION=30m
JWT_VERIFY_EXPIRATION=1d

###############
# Misc Settings
TWO_FA_LENGTH=4
TWO_FA_EXPIRATION=5m
MAX_FAIL_ATTEMPTS=10
LOCKOUT_EXPIRATION=5m
HEALTH_MEMORY=0.75
HEALTH_DISK_THRESHOLD=150
PINO_LOG_LEVEL=info

#####################
# Throttling Settings
THROTTLE_TTL=60
THROTTLE_LIMIT=10

##############
# Mail Settings
MAIL_FROM=<application's no-reply email address>
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_AUTH_USER=<your_username>
MAIL_AUTH_PASS=<your_password>

##################
# Swagger Settings
SWAGGER_ENABLED=true 
